@model BlogDAL.DAL.ThemeOptions

@{
    ViewBag.Title = "AdminMenu";
}
<style>
    table {
        width: 100%;
    }

    td {
        vertical-align: top;
    }

    input {
        width: 100%;
    }
</style>

@using (Html.BeginForm("AdminMenu", "Admin", FormMethod.Post))
{

    <table style="margin-top:30px">
        <tr>
            <td style="width:20%;">
                @Html.Partial("~/Views/Admin/_Menu.cshtml")
            </td>
            <td>
                <div class="panel panel-primary" style="margin-left:10px">
                    <div class="list-group">
                        <a class="list-group-item active">Tema Ayarları</a>
                    </div>
                    <div class="panel-body">
                        <table>
                            <tr>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.HiddenFor(ok => ok.ID)
                                    <h5>* Blog Adı</h5>
                                    @Html.TextBoxFor(ok => ok.BlogBossName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h5>* Blog Açıklama</h5>
                                    @Html.TextBoxFor(ok => ok.BlogBossTitle)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h5>* Blog Footer Text</h5>
                                    @Html.TextBoxFor(ok => ok.BlogFooterText)
                                </td>
                            </tr>
                            <tr>
                                <td style="float:right">
                                    <input type="submit" value="Kaydet" style="width:150px;margin-top:10px" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </td>
        </tr>
    </table>
}


